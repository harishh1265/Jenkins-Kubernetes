pipeline {
    agent any 
        stages {
            stage ('Exicuting parallel job') {
                steps {
                    echo "build step need to be writtrn to build a project"
                    sleep 5
                      }
                  }
             stage ('writing a parallel exicution job') {
                parallel {
                    stage ('Build') {
                        agent {label 'slave02'}
                        steps {
                                git branch: 'main', url: 'https://github.com/suman4197/java-project.git'
                                sh 'mvn clean install'
                                echo "build is succesful"
                                sleep 5
                               }
                         }
                     stage ('Deploy') {
                        agent {label 'slave02'}
                            steps {
                                  sh 'scp -r /opt/jenkins/workspace/paralleljob/target/hello-world-war-1.0.0.war ec2-user@172.31.4.208:/home/ec2-user/tomcat/apache-tomcat-8.5.73/webapps/'
                                  echo "deploy is succesful"
                                  sleep 5
                                  }
                             }
                        }
                   }
            stage ('Test') {
                steps { 
                        echo "test is succesful"
                        sleep 5
              
                           }
                       }
                  }
           }
